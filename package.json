{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:matheusleal5/node-boilerplate.git",
  "author": "Matheus Leal <matheusspleal@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "NODE_ENV=test jest --passWithNoTests --silent --noStackTrace --runInBand --no-cache",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/index.ts",
    "build": "tsc --build",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.2.5",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.1.3",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
